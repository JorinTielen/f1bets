@using f1bets.ViewModels
@using Models
@model CompetitionsViewModel

<h2 class="h2">Control Panel</h2>
<form method="post" asp-controller="Admin" asp-action="ControlPanel">
    <div class="form-group">
        <select asp-for="CompetitionID" class="dropdown">
            @foreach (Competition c in Model.Competitions)
            {
                <option value="@c.ID">@c.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Fetch Results</button>
    </div>
</form>