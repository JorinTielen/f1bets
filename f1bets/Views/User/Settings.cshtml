@using Microsoft.AspNetCore.Http
@using f1bets.ViewModels
@using Models
@model UpdateUserViewModel

<h2 class="h2">Account Settings</h2>
<form method="post">
    <div class="form-group">
        <label for="Username">Username:</label>
        <input name="Username" type="text" class="form-control" value="@Model.Username">
    </div>
    <div class="form-group">
        <label for="Password">Password:</label>
        <input name="Password" type="password" class="form-control" value="@Model.Password">
    </div>
    <div class="form-group">
        <label for="Email">E-mail address:</label>
        <input name="Email" type="email" class="form-control" value="@Model.Email">
    </div>
    @if (!Html.ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary()
        </div>
    }
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Update Settings</button>
    </div>
</form>


