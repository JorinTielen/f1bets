@using Models
@using f1bets.ViewModels
@model FriendsViewModel

<h2 class="h2">My Friends</h2>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3 class="h3">Friends:</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Profile Picture
                        </th>
                        <th>
                            Username
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var friend in Model.Friends)
                    {
                    <tr>
                        <td>
                            xD
                        </td>
                        <td>
                            @friend.Username
                        </td>
                        <td>
                            @Html.RouteLink("Show Profile", "user", new { Controller="User", Action="Profile", Username = friend.Username }) |
                            <a asp-action="Unfriend" asp-route-id="@friend.ID">Unfriend</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <div id="pending" class="row">
                <h3 class="h3">Pending invites:</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Profile Picture
                            </th>
                            <th>
                                Username
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var friend in Model.Pending)
                        {
                            <tr>
                                <td>
                                    OwO
                                </td>
                                <td>
                                    @friend.User.Username
                                </td>
                                <td>
                                    @Html.RouteLink("Show Profile", "user", new { Controller = "User", Action = "Profile", Username = friend.User.Username }) |
                                    <a asp-action="Accept" asp-route-id="@friend.User.ID">Accept</a> |
                                    <a asp-action="Decline" asp-route-id="@friend.User.ID">Decline</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div id="waiting" class="row">
                <h3 class="h3">Waiting for reply:</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Profile Picture
                            </th>
                            <th>
                                Username
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var friend in Model.Waiting)
                        {
                            <tr>
                                <td>
                                    uguu
                                </td>
                                <td>
                                    @friend.User.Username
                                </td>
                                <td>
                                    @Html.RouteLink("Show Profile", "user", new { Controller = "User", Action = "Profile", Username = friend.User.Username })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>